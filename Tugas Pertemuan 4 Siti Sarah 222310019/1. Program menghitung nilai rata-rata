#include <iostream>
using namespace std;

int main() {
  char nama[30];
  int nilai_a, nilai_b, nilai_c, rata_rata, hadiah;

  cout << "Program Hitung Nilai Rata-Rata\n";
  cout << "Nama Siswa :";
  cin >> nama;
  cout << "Nilai Pertandingan I : ";
  cin >> nilai_a;
  cout << "Nilai Pertandingan II : ";
  cin >> nilai_b;
  cout << "Nilai Pertandingan III : ";
  cin >> nilai_c;

  rata_rata = (nilai_a + nilai_b + nilai_c)/ 3;
  cout << "Siswa yang bernama " << nama << endl;
  cout << "Memperoleh nilai rata-rata " << rata_rata << " dari hasil perlombaan yang diikutinya" << endl;
  if (rata_rata >= 85){
    cout << "Hadiah yang didapat adalah Komputer Core i5" << endl;
  } 
  else if (rata_rata >= 70){
    cout << "Hadiah yang didapat adalah Uang sebesar Rp. 2.500.000" << endl;
  } 
  else {
    cout << "Hadiah yang didapat adalah Hiburan" << endl;
  }
  getchar();  
}

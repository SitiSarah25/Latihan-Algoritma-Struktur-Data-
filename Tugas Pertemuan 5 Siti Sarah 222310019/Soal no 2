#include <iostream>
using namespace std;

int main() {
  int baris, kolom;
  cout << "Contoh Program Perulangan" << endl;
  for (baris = 1; baris <= 10; baris++) {
    for (kolom = 1; kolom <= 1; kolom++) {
      cout << baris << " ";
    }
    cout << endl;
  }
  cout << endl;
  cout << "Perulangan Menurun" << endl;
  for (baris = 10; baris >= 1; baris--) {
    for (kolom = 1; kolom >= 1; kolom--) {
      cout << baris << " ";
    }
    cout << endl;
  }
}
